{
  "name": "businessplan-site",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18 <23"
  },
  "scripts": {
    "i18n:types": "node scripts/generate-i18n-types.js",
    "i18n:split": "echo 'i18n:split deprecated - using modular structure'",
    "predev": "node scripts/clean-next.js",
    "pretest": "true",
    "dev": "next dev",
    "dev:tp": "next dev --turbopack",
    "prebuild": "true",
    "build": "next build",
    "clean": "node scripts/clean-next.js",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "check": "node scripts/master-check.js",
    "check:fast": "node scripts/master-check.js --fast",
    "check:fix": "node scripts/master-check.js --fix",
    "i18n:check": "node scripts/validate-i18n-ts.js",
    "i18n:unused": "node scripts/find-unused-i18n.js --baseLocale=en --localesDir=src/i18n/locales --srcDir=src",
    "i18n:unused:ts": "node scripts/find-unused-i18n-ts.js",
    "i18n:unused:apply": "node scripts/find-unused-i18n.js --apply --baseLocale=en --localesDir=src/i18n/locales --srcDir=src",
    "i18n:report": "node scripts/i18n-report.js",
    "i18n:home": "node scripts/validate-home-i18n.js",
    "restore:cv": "node scripts/restore-cv.js",
    "test": "jest --passWithNoTests --config jest.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "i18n:schema": "node scripts/validate-i18n-schema.js",
    "health": "node scripts/route-health-check.js",
    "prepare": "husky",
    "i18n:sort": "node scripts/sort-i18n.js --baseLocale=en --localesDir=src/i18n/locales",
    "i18n:sort:prune": "node scripts/sort-i18n.js --baseLocale=en --localesDir=src/i18n/locales --prune-extra",
    "i18n:repair": "node -e \"console.log('[i18n] repair: combined.json nicht mehr im Einsatz – noop');\"",
    "i18n:clean:all": "npm run i18n:check && npm run i18n:schema && npm run i18n:types",
    "i18n:progress": "node -e \"console.log('[i18n] progress: kombinierte Fortschrittsanzeige deaktiviert – nutze lint/tests für Abdeckung');\"",
    "i18n:fill-missing": "node scripts/i18n-fill-missing.js",
    "i18n:scaffold": "node scripts/i18n-scaffold-locale.js",
    "i18n:prune": "node scripts/prune-unused-i18n.js",
    "i18n:prune:apply": "node scripts/prune-unused-i18n.js --apply"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-pdf/renderer": "^4.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "3.3.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-intl": "^4.3.5",
    "next-themes": "^0.4.6",
    "react": "19.1.1",
    "react-countup": "^6.5.3",
    "react-dom": "19.1.1",
    "react-intersection-observer": "^9.16.0",
    "react-to-print": "^3.1.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/testing-library__react": "^10.0.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "husky": "^9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
