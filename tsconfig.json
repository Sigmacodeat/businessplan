{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "exactOptionalPropertyTypes": true,
    "types": [
      "jest",
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/ui/*": [
        "./src/components/ui/*"
      ],
      "@/components/charts/*": [
        "./src/components/charts/*"
      ],
      "@/components/document/*": [
        "./src/components/document/*"
      ],
      "@/components/print/*": [
        "./src/components/print/*"
      ],
      "@/components/animation/*": [
        "./src/components/animation/*"
      ],
      "@/chapters/*": [
        "./src/app/chapters/*"
      ],
      "@/app/components/chapters/*": [
        "./src/components/chapters/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@charts/*": [
        "./src/components/charts/*"
      ],
      "@sections/*": [
        "./src/components/chapters/sections/*"
      ],
      "@ui/*": [
        "./src/components/ui/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app/components/_archived/**",
    "src/app/components/chapters/_archived/**",
    "src/_archived/**",
    "backup_pre_consolidation/**",
    "scripts/**/__tests__/**"
  ]
}
